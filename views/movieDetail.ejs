<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Movie Details</title>
  <style>
    :root {
      --primary-color: #4361ee;
      --secondary-color: #3f37c9;
      --accent-color: #4895ef;
      --danger-color: #e63946;
      --danger-dark: #c1121f;
      --light-color: #f8f9fa;
      --dark-color: #212529;
      --gray-color: #6c757d;
      --light-gray: #e9ecef;
      --border-radius: 8px;
      --box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      --transition: all 0.3s ease;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background-color: #f5f7fa;
      color: var(--dark-color);
      line-height: 1.6;
      padding: 20px;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
    }

    h1 {
      color: var(--primary-color);
      margin-bottom: 30px;
      text-align: center;
      font-size: 2.5rem;
      position: relative;
      padding-bottom: 15px;
    }

    h1::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 100px;
      height: 4px;
      background-color: var(--accent-color);
      border-radius: 2px;
    }

    .movie-detail {
      background-color: white;
      border-radius: var(--border-radius);
      overflow: hidden;
      box-shadow: var(--box-shadow);
      display: flex;
      flex-direction: column;
      max-width: 1000px;
      margin: 0 auto;
    }

    .movie-poster {
      width: 100%;
      height: 500px;
      object-fit: cover;
      object-position: center;
    }

    .movie-info {
      padding: 30px;
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    .movie-title {
      font-size: 2rem;
      color: var(--dark-color);
      margin-bottom: 10px;
    }

    .movie-info p {
      font-size: 1.1rem;
      line-height: 1.7;
    }

    .movie-info strong {
      color: var(--primary-color);
      font-weight: 600;
      display: inline-block;
      min-width: 120px;
    }

    .actions {
      display: flex;
      gap: 15px;
      padding: 0 30px 30px;
      flex-wrap: wrap;
    }

    .edit-btn, .delete-btn {
      padding: 12px 24px;
      border-radius: var(--border-radius);
      font-weight: 600;
      cursor: pointer;
      transition: var(--transition);
      text-decoration: none;
      text-align: center;
      font-size: 1rem;
      border: none;
      flex: 1;
      min-width: 120px;
    }

    .edit-btn {
      background-color: var(--primary-color);
      color: white;
    }

    .edit-btn:hover {
      background-color: var(--secondary-color);
      transform: translateY(-2px);
      box-shadow: 0 4px 8px rgba(67, 97, 238, 0.3);
    }

    .delete-btn {
      background-color: var(--danger-color);
      color: white;
    }

    .delete-btn:hover {
      background-color: var(--danger-dark);
      transform: translateY(-2px);
      box-shadow: 0 4px 8px rgba(230, 57, 70, 0.3);
    }

    /* Rating badge */
    .rating-badge {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 50px;
      height: 50px;
      border-radius: 50%;
      background-color: var(--accent-color);
      color: white;
      font-weight: bold;
      font-size: 1.2rem;
      margin-left: 10px;
      vertical-align: middle;
    }

    /* Responsive design */
    @media (min-width: 768px) {
      .movie-detail {
        flex-direction: row;
      }
      
      .movie-poster {
        width: 40%;
        height: auto;
        max-height: 600px;
      }
      
      .movie-info {
        width: 60%;
      }
    }

    @media (max-width: 576px) {
      h1 {
        font-size: 2rem;
      }
      
      .movie-title {
        font-size: 1.5rem;
      }
      
      .movie-info p {
        font-size: 1rem;
      }
      
      .edit-btn, .delete-btn {
        padding: 10px 15px;
        font-size: 0.9rem;
      }
    }

    /* Animation for page load */
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .movie-detail {
      animation: fadeIn 0.5s ease-out;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Movie Details</h1>
    <div class="movie-detail">
      <img src="<%= movie.imageUrl %>" alt="<%= movie.name %> poster" class="movie-poster">
      <div class="content-wrapper">
        <div class="movie-info">
          <h2 class="movie-title"><%= movie.name %></h2>
          <p><strong>Release Year:</strong> <%= movie.release_year %></p>
          <p><strong>Genre:</strong> <%= movie.genre %></p>
          <p><strong>Rating:</strong> 
            <%= movie.rating %>/10
            <span class="rating-badge"><%= movie.rating %></span>
          </p>
          <p><strong>Description:</strong> <br><br><%= movie.description %></p>
        </div>
        <div class="actions">
          <a href="/movies/<%= movie._id %>/edit" class="edit-btn">Edit Movie</a>
          <form action="/movies/<%= movie._id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this movie?');" style="display:inline;">
            <button type="submit" class="delete-btn">Delete Movie</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Add confirmation for delete action
    document.querySelector('.delete-btn').addEventListener('click', function(e) {
      if (!confirm('Are you sure you want to delete this movie?')) {
        e.preventDefault();
      }
    });
  </script>
</body>
</html>