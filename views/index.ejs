<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Movie Collection</title>
  <style>
    :root {
      --primary-color: #4361ee;
      --secondary-color: #3f37c9;
      --accent-color: #4895ef;
      --light-color: #f8f9fa;
      --dark-color: #212529;
      --gray-color: #6c757d;
      --border-radius: 8px;
      --box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      --transition: all 0.3s ease;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background-color: #f5f7fa;
      color: var(--dark-color);
      line-height: 1.6;
      padding: 20px;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
    }

    h1 {
      color: var(--primary-color);
      margin: 20px 0 30px;
      text-align: center;
      font-size: 2.5rem;
    }

    .add-movie {
      display: inline-block;
      background-color: var(--primary-color);
      color: white;
      padding: 12px 24px;
      border-radius: var(--border-radius);
      text-decoration: none;
      font-weight: 600;
      margin-bottom: 30px;
      transition: var(--transition);
      box-shadow: var(--box-shadow);
    }

    .add-movie:hover {
      background-color: var(--secondary-color);
      transform: translateY(-2px);
    }

    .search-box {
      width: 100%;
      margin-bottom: 20px;
    }

    .search-input {
      width: 100%;
      padding: 12px 20px;
      border: 2px solid var(--light-gray);
      border-radius: var(--border-radius);
      font-size: 1rem;
      transition: var(--transition);
    }

    .search-input:focus {
      border-color: var(--accent-color);
      outline: none;
      box-shadow: 0 0 0 3px rgba(72, 149, 239, 0.2);
    }

    .genre-filter {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      margin-bottom: 30px;
    }

    .genre-btn {
      padding: 8px 16px;
      border-radius: 20px;
      background-color: var(--light-color);
      color: var(--dark-color);
      border: 1px solid var(--gray-color);
      cursor: pointer;
      transition: var(--transition);
      font-size: 0.9rem;
    }

    .genre-btn:hover, .genre-btn.active {
      background-color: var(--primary-color);
      color: white;
      border-color: var(--primary-color);
    }

    .movie-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 25px;
      margin-top: 30px;
    }

    .movie-card {
      background-color: white;
      border-radius: var(--border-radius);
      overflow: hidden;
      box-shadow: var(--box-shadow);
      transition: var(--transition);
    }

    .movie-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .movie-poster {
      width: 100%;
      height: 400px;
      object-fit: cover;
      border-bottom: 1px solid #eee;
    }

    .movie-info {
      padding: 20px;
    }

    .movie-title {
      font-size: 1.3rem;
      margin-bottom: 8px;
      color: var(--dark-color);
    }

    .movie-rating {
      display: inline-block;
      background-color: var(--accent-color);
      color: white;
      padding: 4px 10px;
      border-radius: 20px;
      font-size: 0.9rem;
      margin-bottom: 10px;
    }

    .movie-genre {
      color: var(--gray-color);
      font-style: italic;
      margin-bottom: 12px;
      display: block;
    }

    .movie-release_year {
      display: block;
      color: var(--gray-color);
      margin-bottom: 10px;
      font-size: 0.9rem;
    }

    .movie-description {
      color: var(--dark-color);
      margin-top: 10px;
      line-height: 1.5;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .no-results {
      grid-column: 1 / -1;
      text-align: center;
      padding: 40px;
      color: var(--gray-color);
      font-size: 1.2rem;
    }

    @media (max-width: 768px) {
      .movie-grid {
        grid-template-columns: 1fr;
      }
      
      h1 {
        font-size: 2rem;
      }
      
      .movie-poster {
        height: 350px;
      }

      .genre-filter {
        justify-content: center;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Movie Collection</h1>
    <div style="display: flex; gap: 10px;">
      <a href="/add" class="add-movie">Add New Movie</a>
      <a href="/gemini" class="add-movie">Gemini Search</a>
    </div>
    
   
    
    <!-- Search Box -->
    <div class="search-box">
      <input type="text" class="search-input" placeholder="Search movies by title, genre, or description...">
    </div>
    
    <!-- Genre Filter -->
    <div class="genre-filter">
      <button class="genre-btn active" data-genre="all">All</button>
      <% const uniqueGenres = [...new Set(movies.map(movie => movie.genre))]; %>
      <% uniqueGenres.forEach(genre => { %>
        <button class="genre-btn" data-genre="<%= genre %>"><%= genre %></button>
      <% }) %>
    </div>
    
    <!-- Movie Grid -->
    <div class="movie-grid">
      <% movies.forEach(movie => { %>
        <div class="movie-card" data-genre="<%= movie.genre %>" 
             data-title="<%= movie.name.toLowerCase() %>"
             data-description="<%= movie.description.toLowerCase() %>">
          <a href="/movies/<%= movie._id %>">
            <img src="<%= movie.imageUrl %>" alt="<%= movie.name %> poster" class="movie-poster">
          </a>
          <div class="movie-info">
            <h2 class="movie-title"><%= movie.name %></h2>
            <span class="movie-rating"><%= movie.rating %>/10</span>
            <span class="movie-genre"><%= movie.genre %></span>
            <span class="movie-release_year"><%= movie.release_year %></span> <!-- Display release year -->
            <p class="movie-description"><%= movie.description %></p>
          </div>
        </div>
      <% }) %>
      <div class="no-results" style="display: none;">
        No movies found matching your search criteria.
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const genreButtons = document.querySelectorAll('.genre-btn');
      const movieCards = document.querySelectorAll('.movie-card');
      const searchInput = document.querySelector('.search-input');
      const noResultsMessage = document.querySelector('.no-results');
      
      let currentGenre = 'all';
      let currentSearch = '';
      
      // Filter movies based on genre and search
      function filterMovies() {
        let hasVisibleCards = false;
        
        movieCards.forEach(card => {
          const matchesGenre = currentGenre === 'all' || card.dataset.genre === currentGenre;
          const matchesSearch = currentSearch === '' || 
                               card.dataset.title.includes(currentSearch) || 
                               card.dataset.description.includes(currentSearch) ||
                               card.dataset.genre.toLowerCase().includes(currentSearch);
          
          if (matchesGenre && matchesSearch) {
            card.style.display = 'block';
            hasVisibleCards = true;
          } else {
            card.style.display = 'none';
          }
        });
        
        // Show/hide no results message
        noResultsMessage.style.display = hasVisibleCards ? 'none' : 'block';
      }
      
      // Genre filter event listeners
      genreButtons.forEach(button => {
        button.addEventListener('click', function() {
          genreButtons.forEach(btn => btn.classList.remove('active'));
          this.classList.add('active');
          currentGenre = this.dataset.genre;
          filterMovies();
        });
      });
      
      // Search input event listener
      searchInput.addEventListener('input', function() {
        currentSearch = this.value.toLowerCase().trim();
        filterMovies();
      });
      
      // Initial filter to handle any pre-selected filters
      filterMovies();
    });
  </script>
</body>
</html>
